<Button>
    background_color: (0.910, 0.910, 0.918, 1)
    background_normal: ''
    font_size: 32
    size_hint: .2, .2
    color: (0, 0, 0)

<Calculadora>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: input
            text: '0'
            halign: 'right'
            font_size: 65
            size_hint: (1, .15)
            multiline: False
        
        GridLayout:
            cols: 4
            rows: 5
            padding: 2
            spacing: 2
                
            Button:
                text: 'AC'
                color: (1, 1, 1, 1)
                background_color: (0, 0.518, 0.988, 1)
                on_press: root.limpiar_pantalla()
     
            Button:
                text: 'DEL'
                color: (1, 1, 1, 1)
                background_color: (0, 0.518, 0.988, 1)
                on_press: root.eliminar_ultimo()


            Button:
                text: '%'
                background_color: (.5, .5, .5)
                on_press: root.operador_matematico('%')

            Button:
                text: '/'
                background_color: (.5, .5, .5)
                on_press: root.operador_matematico('/')
                
            Button:
                text: '7'
                on_press: root.presionar_boton('7')
                
            Button:
                text: '8'
                on_press: root.presionar_boton('8')
                
            Button:
                text: '9'
                on_press: root.presionar_boton('9')
                
            Button:
                text: '*'
                background_color: (.5, .5, .5)
                on_press: root.operador_matematico('*')
                
            Button:
                text: '4'
                on_press: root.presionar_boton('4')
                
            Button:
                text: '5'
                on_press: root.presionar_boton('5')
                
            Button:
                text: '6'
                on_press: root.presionar_boton('6')
                    
            Button:
                text: '-'
                background_color: (.5, .5, .5)
                on_press: root.operador_matematico('-')
                
            Button:
                text: '1'
                on_press: root.presionar_boton('1')
                    
            Button:
                text: '2'
                on_press: root.presionar_boton('2')
                    
            Button:
                text: '3'
                on_press: root.presionar_boton('3')
                        
            Button:
                text: '+'
                background_color: (.5, .5, .5)
                on_press: root.operador_matematico('+')
            
            Button:
                text: '0'
                on_press: root.presionar_boton('0')
                
            Button:
                text: '.'
                background_color: (.5, .5, .5)
                on_press: root.punto_decimal()

            Button:
                text: '+/-'
                background_color: (.5, .5, .5)
                on_press: root.cambiar_signo()
                    
            Button:
                text: '='
                background_color: (.5, .5, .5)
                on_press: root.calcular()
                
